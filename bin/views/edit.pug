extends layout

block content
    h1 #{title}
    form(method='post', action='/book/edit/'+book._id+'?_method=PUT')
            fieldset
                legend Add a Book
                div
                    label Title *
                        br
                        input(type='text', name='book_title', required, value=book.title)
                div
                    label Author *
                        br
                        input(type='text', name='book_author', required, value=book.author)
                div
                    label ISBN *
                        br
                        input(type='text', name='book_isbn', required, value=book.isbn,
                            pattern='(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])')
                div
                    button Save